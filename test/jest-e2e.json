{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^src/(.*)$": "<rootDir>/../src/$1",
    "^test/(.*)$": "<rootDir>/$1"
  },
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "isolatedModules": true
      }
    ]
  },
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"]
}
